<Window x:Class="ORMapperSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="O/Rマッパーサンプル - Entity Framework Core" Height="600" Width="1020">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- データベース情報 -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="接続中のデータベース:" FontWeight="Bold"/>
                <TextBlock x:Name="DatabaseProviderTextBlock" FontSize="14" Foreground="Blue"/>
            </StackPanel>
        </Border>

        <!-- 新規商品追加フォーム -->
        <GroupBox Grid.Row="1" Header="新規商品追加" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="商品名:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="ProductNameTextBox" Grid.Column="1" Margin="0,0,10,0"/>

                <TextBlock Grid.Column="2" Text="説明:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="ProductDescriptionTextBox" Grid.Column="3" Margin="0,0,10,0"/>

                <TextBlock Grid.Column="4" Text="価格:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="ProductPriceTextBox" Grid.Column="5" Margin="0,0,10,0"/>

                <TextBlock Grid.Column="6" Text="数量:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="ProductQuantityTextBox" Grid.Column="7" Margin="0,0,10,0"/>

                <TextBlock Grid.Column="8" Text="カテゴリ:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="CategoriesComboBox" Grid.Column="9" 
                          DisplayMemberPath="Name"
                          Margin="0,0,10,0"/>

                <Button x:Name="AddProductButton" Grid.Column="11" Content="追加" Width="80" Height="25"/>
            </Grid>
        </GroupBox>

        <!-- 商品一覧 -->
        <GroupBox Grid.Row="2" Header="商品一覧">
            <DataGrid x:Name="ProductsDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                    <DataGridTextColumn Header="商品名" Binding="{Binding Name}" Width="200"/>
                    <DataGridTextColumn Header="説明" Binding="{Binding Description}" Width="250"/>
                    <DataGridTextColumn Header="価格" Binding="{Binding Price, StringFormat=\{0:C\}}" Width="100"/>
                    <DataGridTextColumn Header="数量" Binding="{Binding Quantity}" Width="80"/>
                    <DataGridTextColumn Header="カテゴリ" Binding="{Binding Category.Name}" Width="100" IsReadOnly="True"/>
                    <DataGridTextColumn Header="作成日時" Binding="{Binding CreatedAt, StringFormat=\{0:yyyy/MM/dd HH:mm:ss\}}" Width="150" IsReadOnly="True"/>
                    <DataGridTextColumn Header="更新日時" Binding="{Binding UpdatedAt, StringFormat=\{0:yyyy/MM/dd HH:mm:ss\}}" Width="150" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- 操作ボタン -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="LoadProductsButton" Content="リロード" Width="100" Height="30" Margin="0,0,10,0"/>
            <Button x:Name="UpdateProductButton" Content="更新" Width="100" Height="30" Margin="0,0,10,0"/>
            <Button x:Name="DeleteProductButton" Content="削除" Width="100" Height="30" Margin="0,0,10,0"/>
            <Button x:Name="InitializeDatabaseButton" Content="DB初期化" Width="100" Height="30" Background="Orange"/>
        </StackPanel>
    </Grid>
</Window>