<Window x:Class="ORMapperSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="O/Rマッパーサンプル - Entity Framework Core" Height="600" Width="1020">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- データベース情報 -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="接続中のデータベース:" FontWeight="Bold"/>
                <TextBlock Text="{Binding DatabaseProvider}" FontSize="14" Foreground="Blue"/>
            </StackPanel>
        </Border>

        <!-- 新規商品追加フォーム -->
        <GroupBox Grid.Row="1" Header="新規商品追加" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="商品名:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Grid.Column="1" Text="{Binding NewProductName}" Margin="0,0,10,0"/>

                <TextBlock Grid.Column="2" Text="説明:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Grid.Column="3" Text="{Binding NewProductDescription}" Margin="0,0,10,0"/>

                <TextBlock Grid.Column="4" Text="価格:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Grid.Column="5" Text="{Binding NewProductPrice}" Margin="0,0,10,0"/>

                <TextBlock Grid.Column="6" Text="数量:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Grid.Column="7" Text="{Binding NewProductQuantity}" Margin="0,0,10,0"/>

                <TextBlock Grid.Column="8" Text="カテゴリ:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox Grid.Column="9" 
                          ItemsSource="{Binding Categories}" 
                          SelectedItem="{Binding NewProductCategory}"
                          DisplayMemberPath="Name"
                          Margin="0,0,10,0"/>

                <Button Grid.Column="11" Content="追加" Command="{Binding AddProductCommand}" Width="80" Height="25"/>
            </Grid>
        </GroupBox>

        <!-- 商品一覧 -->
        <GroupBox Grid.Row="2" Header="商品一覧">
            <DataGrid ItemsSource="{Binding Products}" 
                      SelectedItem="{Binding SelectedProduct}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                    <DataGridTextColumn Header="商品名" Binding="{Binding Name}" Width="200"/>
                    <DataGridTextColumn Header="説明" Binding="{Binding Description}" Width="250"/>
                    <DataGridTextColumn Header="価格" Binding="{Binding Price, StringFormat=\{0:C\}}" Width="100"/>
                    <DataGridTextColumn Header="数量" Binding="{Binding Quantity}" Width="80"/>
                    <DataGridComboBoxColumn Header="カテゴリ" 
                                            SelectedItemBinding="{Binding Category}" 
                                            DisplayMemberPath="Name" 
                                            Width="100">
                        <DataGridComboBoxColumn.ElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="ItemsSource" Value="{Binding DataContext.Categories, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            </Style>
                        </DataGridComboBoxColumn.ElementStyle>
                        <DataGridComboBoxColumn.EditingElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="ItemsSource" Value="{Binding DataContext.Categories, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            </Style>
                        </DataGridComboBoxColumn.EditingElementStyle>
                    </DataGridComboBoxColumn>
                    <DataGridTextColumn Header="作成日時" Binding="{Binding CreatedAt, StringFormat=\{0:yyyy/MM/dd HH:mm:ss\}}" Width="150" IsReadOnly="True"/>
                    <DataGridTextColumn Header="更新日時" Binding="{Binding UpdatedAt, StringFormat=\{0:yyyy/MM/dd HH:mm:ss\}}" Width="150" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- 操作ボタン -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="リロード" Command="{Binding LoadProductsCommand}" Width="100" Height="30" Margin="0,0,10,0"/>
            <Button Content="更新" Command="{Binding UpdateProductCommand}" Width="100" Height="30" Margin="0,0,10,0"/>
            <Button Content="削除" Command="{Binding DeleteProductCommand}" Width="100" Height="30" Margin="0,0,10,0"/>
            <Button Content="DB初期化" Command="{Binding InitializeDatabaseCommand}" Width="100" Height="30" Background="Orange"/>
        </StackPanel>
    </Grid>
</Window>